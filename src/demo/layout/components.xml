<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	${rootPath}:项目根目录src(内置变量)
 -->
<JFrame id="mainWindow" title="组件用法" width="480" height="600"
 	locationRelativeTo="null" defaultCloseOperation="3" resizable="false" layout="0">
 	<JLabel bounds="10,10,250,30" text="提示：双击加载布局文件，右键查看xml源码" />
	<JScrollPane bounds="20,50,430,480" autoscrolls="true">
		<JList id="xmlList" bounds="20,30,350,400" cursor="HAND_CURSOR">
			<!-- 扫描layout.components包下的所有布局文件并显示 -->
			<JPopupMenu id="xmlPopupMenu" a-added="false">
				<JMenuItem id="showXmlSource" text="查看源码" />
			</JPopupMenu>
		</JList>
	</JScrollPane>
	<JDialog id="xmlSourceWindow" title="源码" width="960" height="480"
 		locationRelativeTo="null" defaultCloseOperation="2" layout="2" a-added="false">
 		<JScrollPane>
			<JTextArea id="xmlTextPanel" editable="false"/>
		</JScrollPane>
 	</JDialog>
</JFrame>